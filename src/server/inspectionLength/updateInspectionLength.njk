{% extends 'layouts/page.njk' %}
{% set displayBacklink = true %}
{% block content %}

  {% call appPageBody() %}
      <h1 class="govuk-heading-l">
        Change inspection length
      </h1>

      <h2 class="govuk-heading-m">
        {{selectedAnimalTypes}}
      </h2>

    <form method="post" action="confirmInspectionLength" >
       <input type="hidden" id="selectedItems" name="selectedItems" value="{{selectedItems}}">
       <input type="hidden" id="selectedAnimalTypes" name="selectedAnimalTypes" value="{{selectedAnimalTypes}}">

      {{ govukInput({
        label: {
          text: "Marshalling"
        },
        classes: "govuk-input--width-5",
        id: "marshalling",
        name: "marshalling",
        suffix: {
          text: "mins"
        },
        spellcheck: false,
        value: ""
      }) }}


      {{ govukInput({
        label: {
          text: "Set up"
        },
        classes: "govuk-input--width-5",
        id: "setup",
        name: "setup",
        suffix: {
          text: "mins"
        },
        spellcheck: false,
        value: ""
      }) }}


      {{ govukInput({
        label: {
          text: "Inspection"
        },
        classes: "govuk-input--width-5",
        id: "inspection",
        name: "inspection",
        suffix: {
          text: "mins"
        },
        spellcheck: false,
          value: ""
      }) }}


      {{ govukInput({
        label: {
          text: "Clean up"
        },
        classes: "govuk-input--width-5",
        id: "cleanUp",
        name: "cleanUp",
        suffix: {
          text: "mins"
        },
        spellcheck: false,
          value: ""
      }) }}

      <button type="submit" class="govuk-button" data-module="govuk-button">
        Save and continue
      </button>

    </form>
{% endcall %}

{% endblock %}
